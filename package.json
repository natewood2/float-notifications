{
  "name": "@float/notifications",
  "version": "1.0.0",
  "description": "Simple, elegant notifications for Tauri and React applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "watch": "tsc -w",
    "prepare": "npm run build"
  },
  "keywords": [
    "tauri",
    "notifications",
    "desktop",
    "toast",
    "react",
    "ui"
  ],
  "author": "Nathan R. Wood",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.7.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/components/NotificationContext.js",
      "require": "./dist/components/NotificationContext.js",
      "types": "./dist/components/NotificationContext.d.ts"
    }
  }
}
